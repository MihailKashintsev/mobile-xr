{
  "expo": {
    "name": "Mobile XR",
    "slug": "mobile-xr",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "scheme": "mobile-xr",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.mobilexr",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera needed for AR passthrough and hand tracking",
        "NSMotionUsageDescription": "Motion sensors needed for head tracking",
        "UIRequiresFullScreen": true,
        "UISupportedInterfaceOrientations": ["UIInterfaceOrientationLandscapeLeft", "UIInterfaceOrientationLandscapeRight"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.yourname.mobilexr",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Mobile XR needs camera access for AR passthrough and hand tracking"
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Mobile XR uses motion sensors to track head movement"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR-PROJECT-ID"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "githubRepo": "YOUR_GITHUB_USERNAME/mobile-xr",
      "eas": {
        "projectId": "YOUR-EAS-PROJECT-ID"
      }
    }
  }
}
